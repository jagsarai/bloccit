<h1>New Ad</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for Ads</p>
    <ul>
      <li>Please make sure all Ads are relevant to page</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @advertisement do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder:"Enter ad title" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_field :body, row: 8, class: 'form-control', placeholder:"Enter ad body" %>
      </div>

      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control', type:'number', placeholder:"Enter ad price" %>
      </div>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
